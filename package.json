{
	"name": "real-time-bus-arrival",
	"displayName": "Real-time Bus Arrival",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "realTimeBus.refreshLines",
				"icon": "$(refresh)",
				"title": "刷新线路"
			},
			{
				"command": "realTimeBus.addLine",
				"icon": "$(add)",
				"title": "添加线路"
			},
			{
				"command": "realTimeBus.removeLine",
				"icon": "$(remove)",
				"title": "删除线路"
			},
			{
				"command": "realTimeBus.refreshLine",
				"icon": "$(refresh)",
				"title": "刷新线路"
			},
			{
				"command": "realTimeBus.revertLine",
				"icon": "$(sort-precedence)",
				"title": "调成线路方向"
			},
			{
				"command": "realTimeBus.refreshLocations",
				"icon": "$(refresh)",
				"title": "刷新车辆信息"
			},
			{
				"command": "realTimeBus.addLocation",
				"icon": "$(add)",
				"title": "添加车辆"
			}
		],
		"configuration": {
			"title": "Real Time Bus Arrival",
			"properties": {
				"RealTimeBus.lines": {
					"type": "array",
					"default": [],
					"description": "订阅线路"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "sidebar",
					"title": "公交实时到站提醒",
					"icon": "src/assets/img/busStation.png"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "realTimeBus.refreshLines",
					"group": "navigation",
					"when": "view == realTimeBusLine"
				},
				{
					"command": "realTimeBus.addLine",
					"group": "navigation",
					"when": "view == realTimeBusLine"
				},
				{
					"command": "realTimeBus.refreshLocations",
					"group": "navigation",
					"when": "view == realTimeBusLocation"
				},
				{
					"command": "realTimeBus.addLocation",
					"group": "navigation",
					"when": "view == realTimeBusLocation"
				}
			],
			"view/item/context": [
				{
					"command": "realTimeBus.revertLine",
					"group": "inline",
					"when": "view == realTimeBusLine && viewItem == BusLineItem"
				},
				{
					"command": "realTimeBus.refreshLine",
					"group": "inline",
					"when": "view == realTimeBusLine && viewItem == BusLineItem"
				},
				{
					"command": "realTimeBus.removeLine",
					"group": "inline",
					"when": "view == realTimeBusLine && viewItem == BusLineItem"
				}
			]
		},
		"views": {
			"sidebar": [
				{
					"id": "realTimeBusLine",
					"name": "公交线路"
				},
				{
					"id": "realTimeBusLocation",
					"name": "到站提醒"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/ramda": "^0.27.38",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"ramda": "^0.27.1"
	}
}
